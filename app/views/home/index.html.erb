<div class="wrapper-home text-center">
    <main class="px-3"><br/>
        <h1 class="home-lead-text home-h1">Mayo <%= image_tag("logo.png", :alt => "logo") %> Booking</h1>
        <p class="lead">Welcome to Mayo Booking - a delivery booking system</p>
    </main>
    <% if user_signed_in? %>
        <div class="btn btn-lg btn-secondary fw-bold  bg-white btn-outline-primary">
            <%= link_to "New booking", new_booking_path %>
        </div>
        <div class="btn btn-lg btn-secondary fw-bold  bg-white btn-outline-primary">
            <%= link_to "My bookings", bookings_path %>
        </div>
    <% else %>
        <div class="btn btn-lg btn-secondary fw-bold  bg-white btn-outline-primary">
            <%= link_to 'Login', new_user_session_path, class:"nav-link" %>
        </div>
        <div class="btn btn-lg btn-secondary fw-bold  bg-white btn-outline-primary">
            <%= link_to 'Register', new_user_registration_path, class:"nav-link" %>
        </div>
    <% end %>
</div>
   